<h1>Listing servers</h1>

<table>
  <tr>
    <th>Server name</th>
    <th>Ip address</th>
    <th>Hardware</th>
    <th>Hardware type</th>
    <th>Cpu type</th>
    <th>Cpu speed</th>
    <th>Ram</th>
    <th>Rack location</th>
    <th>Server function</th>
  </tr>

<% for server in @servers %>
  <tr>
    <td><%=h server.server_name %></td>
    <td><%=h server.ip_address %></td>
    <td><%=h server.hardware %></td>
    <td><%=h server.hardware_type %></td>
    <td><%=h server.cpu_type %></td>
    <td><%=h server.cpu_speed %></td>
    <td><%=h server.ram %></td>
    <td><%=h server.rack_location %></td>
    <td><%=h server.server_function %></td>
    <td><%= link_to 'Show', server %></td>
    <td><%= link_to 'Edit', edit_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

